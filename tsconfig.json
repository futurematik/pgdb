{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "noUnusedLocals": true,
    "strict": true,
    "experimentalDecorators": true,
    "types": ["node"],
    "sourceMap": true,
    "sourceRoot": "src",
    "outDir": "dist",
    "declaration": true
  },
  "exclude": ["node_modules", "dist"]
}
